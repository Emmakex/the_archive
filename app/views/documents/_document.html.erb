<div id="<%= dom_id document %>">
  <p>
    <strong>Title:</strong>
    <%= document.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= document.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= document.location_id %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= document.date %>
  </p>

  <p>
    <strong>Identifier:</strong>
    <%= document.identifier %>
  </p>

  <p>
    <strong>Attachment:</strong>
    <%= link_to document.attachment.filename, document.attachment if document.attachment.attached? %>
  </p>

  <p>
    <strong>Created by:</strong>
    <%= document.created_by_id %>
  </p>

</div>
